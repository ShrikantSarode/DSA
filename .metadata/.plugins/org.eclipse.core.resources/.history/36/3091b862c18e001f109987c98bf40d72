package dsaQuestion;

public class CountEdges_Graph {
	public static void main(String[] args) {
		int[][] adjacencyMatrix = { { 0, 1, 3, 4 }, { 2, 0, Integer.MAX_VALUE, Integer.MAX_VALUE }, { 1, 6, 0, 3 },
				{ Integer.MAX_VALUE, 4, 8, 0 } };

		int edgeCount = countEdges(adjacencyMatrix);
		System.out.println("Total number of edges: " + edgeCount);
	}

	public static int countEdges(int[][] matrix) {
		int count = 0;

		for (int i = 0; i < matrix.length; i++) {
			for (int j = 0; j < matrix[i].length; j++) {
				// Count the edge if the value is not infinity and not zero (excluding
				// self-loops)
				if (matrix[i][j] != Integer.MAX_VALUE && matrix[i][j] != 0) {
					count++;
				}
			}
		}

		return count;
	}
}
